{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
		{{ encore_entry_link_tags('login') }}
		
	{% endblock %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="section">
		<div class="container">
			<div class="row full-height justify-content-center">
				<div class="col-12 text-center align-self-center py-5">
					<div class="section pb-5 pt-5 pt-sm-2 text-center">
						<div class="col-md-12 text-center">
							<a class="btn btn-dark w-25 mx-auto mt-5" href="{{path('app_login')}}">Connexion</a>
							<a class="btn btn-dark w-25 mx-auto mt-5" href="{{path('app_register')}}">Création de compte</a>
						</div>
						<div class="card-3d-wrap mx-auto">
							<div class="card-3d-wrapper">
								<div class="card-front">
									<div class="center-wrap">
										<div class="section text-center">
											{{ form_start(registrationForm) }}
											<h4 class="mb-4 pb-3">Créer un compte</h4>
											<div class="form-group">
												{{ form_row(registrationForm.nom,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
											</div>
											<div class="form-group mt-2">
												{{ form_row(registrationForm.prenom,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
											</div>
											<div class="form-group mt-2">
												{{ form_row(registrationForm.email,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
											</div>
											<div class="form-group mt-2">
												{{ form_row(registrationForm.plainPassword,{'label_attr': {'class': 'col-sm-2 control-label'}}) }}
											</div>


											<button type="submit" class="btn btn-dark w-25 mx-auto mt-5">Créer</button>
											{{ form_end(registrationForm) }}
										</div>

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
{% endblock %}
