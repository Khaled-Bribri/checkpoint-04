{% extends 'base.html.twig' %}

{% block title %}Services
{% endblock %}

{% block body %}
<a href="{{path('app_service_new')}}">Ajouter un nouveau service</a>
	<div class="row">
		{% for service in services %}
			<div class="col-lg-3 col-md-4 col-sm-12 m-1">
				<div class="card" style="width: 25rem;">
					<img src="{{service.url}}" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">{{service.service}}</h5>
						<p class="card-text">{{service.description}}</p>
                        <div class="col-md-12 text-center">
						<a href="#" class="btn btn-dark w-30 mx-auto mt-5">commander</a>
                        <a href="{{path('app_service_show',{id:service.id})}}" class="btn btn-dark w-30 mx-auto mt-5">Voir</a>
                        <a href="{{path('app_service_edit',{id:service.id})}}" class="btn btn-dark w-30 mx-auto mt-5">Modifier</a>
                        </div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
